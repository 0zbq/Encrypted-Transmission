  src: local(-apple-system), local(BlinkMacSystemFont), local('Segoe UI'), local(Roboto), local('Helvetica Neue'), local(Arial), local(sans-serif);
}

text, view[class*="text"], view[class*="title"] {
  font-family: 'System Fallback', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
