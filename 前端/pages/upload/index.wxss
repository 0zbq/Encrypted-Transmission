.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
  position: relative;
  letter-spacing: 1rpx;
}



.title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #525252, #404040);
  border-radius: 2rpx;
}

.modes {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.chip {
  padding: 16rpx 28rpx;
  border-radius: 32rpx;
  background: rgba(82, 82, 82, 0.08);
  color: #525252;
  border: 2px solid transparent;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.chip::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.chip:active::before {
  left: 100%;
}

.chip-active {
  background: linear-gradient(135deg, #525252 0%, #404040 100%);
  color: #fff;
  box-shadow: 0 8rpx 16rpx rgba(82, 82, 82, 0.3);
  transform: scale(1.05);
  border-color: transparent;
}

.field {
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.field text {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.field input {
  padding: 18rpx 20rpx;
  border: 2px solid #e8ecf1;
  border-radius: 16rpx;
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.9);
  transition: all 0.3s ease;
  color: #333;
}

.field input:focus {
  border-color: #525252;
  box-shadow: 0 0 0 4rpx rgba(82, 82, 82, 0.08);
  background: #fff;
}

.choose {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin: 20rpx 0;
  padding: 16rpx;
  background: rgba(82, 82, 82, 0.04);
  border-radius: 16rpx;
  border: 1px solid rgba(82, 82, 82, 0.12);
}

.choose button {
  background: linear-gradient(135deg, #525252 0%, #404040 100%);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 14rpx 28rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 12rpx rgba(82, 82, 82, 0.25);
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
}

.choose button:active {
  transform: scale(0.95);
}

.share {
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 28rpx;
  background: rgba(82, 82, 82, 0.06);
  border-radius: 24rpx;
  border: 1px solid rgba(82, 82, 82, 0.18);
}

.share .space-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.share text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.share button {
  background: rgba(82, 82, 82, 0.1);
  color: #525252;
  border: 1px solid #525252;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.share button:active {
  background: #525252;
  color: #fff;
}

.share .muted {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 12rpx;
  word-break: break-all;
  letter-spacing: 0.5rpx;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

.btn-primary {
  width: 100%;
  margin: 20rpx 0;
  background: linear-gradient(135deg, #525252 0%, #404040 100%);
  color: #fff;
  border: none;
  border-radius: 18rpx;
  padding: 22rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 20rpx rgba(82, 82, 82, 0.35);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  letter-spacing: 1rpx;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.btn-primary:active::before {
  left: 100%;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 12rpx rgba(82, 82, 82, 0.35);
}

.status-box {
  margin-top: 20rpx;
  padding: 20rpx;
  background: rgba(82, 82, 82, 0.05);
  border-radius: 16rpx;
  border-left: 4rpx solid #525252;
  animation: fadeIn 0.3s ease-out;
}

.muted {
  font-size: 26rpx;
  color: #666;
}

